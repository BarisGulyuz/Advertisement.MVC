<header class="masthead text-center text-white">
    <div class="masthead-content">
        <div class="container px-5">
            <h1 class="masthead-heading mb-0">En Güncel İlanlar</h1>
            <h2 class="masthead-subheading mb-0">Yazılım, Biişim, Teknoloj, İlanları</h2>
            <a class="btn btn-primary btn-xl rounded-pill mt-5" href="#scroll">Daha Fazla</a>
        </div>
    </div>
    <div class="bg-circle-1 bg-circle"></div>
    <div class="bg-circle-2 bg-circle"></div>
    <div class="bg-circle-3 bg-circle"></div>
    <div class="bg-circle-4 bg-circle"></div>
</header>

@foreach (var item in Model)
{
    <section id="scroll">
        <div class="container px-5">
            <div class="row gx-5 align-items-center">
                <div class="col-lg-6 @(item.Id%2==0? "order-lg-2" : "")">
                    <div class="p-5"><img class="img-fluid rounded-circle" src="~/Uploads/img/@item.ImagePath" alt="..." /></div>
                </div>
                <div class="col-lg-6 @(item.Id%2==0? "order-lg-1" : "")">
                    <div class="p-5">
                        <h2 class="display-4">@item.Title</h2>
                        <p>@item.Description</p>
                    </div>
                </div>
            </div>
        </div>
    </section>
}
